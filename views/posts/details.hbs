
{{!-- <h2>{{title}}</h2> --}}
<div>
  {{content}}
  <br>
  - by {{author.username}}
</div>

{{#unless comments}}
  <p>No comments yet!</p>
{{/unless}}

{{#each comments}}
  <p><b>{{this.author.username}}:</b> {{this.content}}</p>
{{/each}}

<hr>

<h3>Add comment</h3>

<form action="/posts/{{_id}}/comment" method="post">
  {{!-- <label> Your username:
    <input type="text" name="author" />
  </label> --}}

  {{!-- <input type="text" name="postAuthor"  --}}
  {{!-- value=" --}}
  
  <textarea name="content" cols="30" rows="2"></textarea>
  <br/>
  <p>By: {{author.username}}</p>
  <button type="submit">Comment</button>
</form>

