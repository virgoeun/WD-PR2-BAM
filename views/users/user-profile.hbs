{{! views/users/user-profile.hbs }}

{{#if userInSession}}
  <h2>Hello, {{userInSession.username}}!</h2>
{{/if}}

<div>
  <div class="profile-details">
    <img class="avatar"
      src="{{userInSession.avatar}}"
      alt="{{userInSession.username}} Avatar"
      class="avatar"
    />
    <p>Username: {{userInSession.username}}</p>
    <p>Full Name: {{userInSession.fullName}}</p>
    <br />
    <a href="/userProfile/edit/{{user._id}}" class="edit-profile"><button
        class="styled-button"
      >Edit Profile Details</button></a>

    {{!-- <a href="/userProfile/edit/{{user._id}}" class="edit-avatar"><button
        class="styled-button"
      >Edit Profile Image</button></a> --}}
  </div>

  <div>
    <a href="/community"><button class="styled-button">Go to the Community</button></a>
    <a href="/daily-journal"><button class="styled-button">Add a Journal Entry</button></a>
  </div>

  <div class="profile-body">
    <div class="mood">
      <h2>Wellbeing Mood Check</h2>
      <h3>How are you feeling today?</h3>
      <h4>Select Your Mood:</h4>
      <form class="emojies" action="/submit-mood" method="post">
        <div class="emoji-container">
          {{#each emojies}}
            <label class="emoji-label">
              <input
                type="radio"
                name="selectedMood"
                value="{{name}}"
                style="display: none;"
              />
              <span class="emoji">{{emoji}}</span>
              <span class="emoji">{{name}}</span>
            </label>
          {{/each}}
        </div>
        {{!-- <button type="submit">Submit</button> --}}
      </form>
    </div>    

  <div class="recomm">
      <h2>Daily Yoga recommendation</h2>

      <div class="yoga-container">
            <h3>Daily Yoga</h3>
        <div class="pose-container">     
        <img src="{{poses.url_png}}" alt="{{poses.english_name}}" class="yoga-pose-picture">
          <h3>{{poses.english_name}}</h3>
          <p><strong>How to do:</strong></p>
          <p>{{poses.pose_description}}</p>
          <strong>Benefits:</strong></p>
          <p>{{poses.pose_benefits}}</p>
       </div>
      </div>
  </div>

    <div class="activity">
      <h2>Your Posts</h2>
      <p>Placeholder for post tracking</p>
      <div>
        {{#each userPosts}}
          <div class="post">
            <p>{{content}}</p>
            <!-- Display other post details as needed -->
          </div>
        {{/each}}
      </div>
    </div>

  </div>
</div>