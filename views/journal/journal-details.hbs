<section class ="journal-section"> 
<div class="bg-indigo text-white">
<div class="writejournal-textbox">
<strong><h2> {{journal.title}}</h2> </strong>
</div>

 <div class="row">
  <div class="col-sm-6">
  
<div class="journal-content-padding-box"> 
<div class="form-outline mb-4"> 
 <strong>Created At: </strong>
  {{journal.createdAt}}
</div>
</div>

<div class="journal-content-padding-box"> 
